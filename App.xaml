<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WuDingCard"
             x:Class="WuDingCard.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!-- 添加全局资源 -->
            <Color x:Key="PrimaryColor">#2196F3</Color>
            <Color x:Key="AccentColor">#FF5722</Color>
            <Color x:Key="TextColor">#B2EBF2</Color>
            <Color x:Key="CardBackgroundColor">#009688</Color>
            <Color x:Key="PageBackgroundColor">#009688</Color>
            <!-- 选中项样式（可选，需自定义Shell样式或用VisualStateManager） -->
        </ResourceDictionary>
    </Application.Resources>
</Application>