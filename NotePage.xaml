<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WuDingCard.NotePage"
             Title="笔记页">
    <StackLayout>
        <HorizontalStackLayout>
            <Label Text="标题:" HorizontalOptions="Start" VerticalOptions="Center" FontSize="Medium" />
            <Editor Placeholder="标题" Text="{Binding Title}" HorizontalOptions="FillAndExpand" VerticalOptions="Center" />
        </HorizontalStackLayout>
        <Editor Placeholder="内容" Text="{Binding Content}" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" />
    </StackLayout>
</ContentPage>